{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "outDir": "out",
    "skipLibCheck": true,
    "lib": [
      "es2020", "dom"
    ],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true   /* enable all strict type-checking options */
  },
  "exclude": [
    "node_modules",
    ".vscode-test"
  ],
  "include": ["src/**/*"]
}
